generator client {
  provider         = "prisma-client-js"
  output           = "../generated/core"
}

datasource db {
  provider = "postgresql"
  url      = env("CORE_DATABASE_URL")
}
  
model User {
  id            String    @id @default(uuid())
  name          String
  email         String
  password      String
  refreshToken  String?  
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}